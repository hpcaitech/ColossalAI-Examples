{
  "method": "colossalai",
  "model": {
    "type": "bert_base"
  },
  "hyperparameter": {
    "batch_size": 8,
    "num_epochs": 20,
    "steps_per_epoch": 10
  },
  "gradient_clipping": 1.0,
  "parallel": {
    "pipeline": 4,
    "tensor": {
      "mode": "1d",
      "size": 1
    }
  },
  "use_mem_monitor": true
}
